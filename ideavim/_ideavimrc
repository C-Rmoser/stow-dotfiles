""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set multiple-cursors
set NERDTree
" set ReplaceWithRegister
set vim-paragraph-motion
set highlightedyank
set commentary

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"
let g:highlightedyank_highlight_color = "rgba(200, 220, 240, 155)"

""" Common settings -------------------------
set showmode
set so=5
set incsearch
set nu
set clipboard=unnamed
set ignorecase                          " Ignore case when searching in file
set smartcase                           " Case sensitive search when using uppercase letters
set nohlsearch                          " Don't leave results highlighted after pressing enter
set visualbell
set relativenumber
set number 
set scrolloff=8

""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep
set idearefactormode=select

" Center screen when searching
nmap n nzz
nmap N Nzz

" Keep cursor where it is when concatenate lines
nnoremap J mzJ`z

imap jk <Esc>
" Make Y copy current line from cursor to end
nmap Y y$

" Reload _ideavimrc
map <leader>sm :source ~/_ideavimrc<CR> 

nnoremap gcc :action CommentByLineComment<CR>
vnoremap gc :action CommentByLineComment<CR>

nmap <leader>dd <Action>(Debug)
nmap <leader>ds <Action>(Stop)
" Run last run configuration (also works for unit tests)
nmap <leader>dnr <Action>(Run)
nmap <leader>dnb <Action>(BuildButton)
nmap <leader>ds <Action>(Stop)
nmap <leader>db <Action>(ToggleLineBreakpoint)
" Show code actions
nmap <leader>c <Action>(ShowIntentionActions)

nmap <leader>gd <Action>(GoToDeclaration)
nmap <leader>rp <Action>(Javascript.Linters.EsLint.Fix)

imap ;; <Esc>A;<Esc>

" Use global book marks 
nmap <leader>dm <Action>(ToggleBookmark)
nnoremap ma mA
nnoremap 'a 'A
nnoremap ms mS
nnoremap 's 'S
nnoremap md mD
nnoremap 'd 'D
nnoremap mf mF
nnoremap 'f 'F
" nnoremap stj 'J
" nnoremap sk mK
" nnoremap stk 'K
" nnoremap sl mL
" nnoremap stl 'L
" nnoremap sd :action ToggleBookmark<CR>

nmap <leader>ff <Action>(GotoFile)
nmap <leader>fp <Action>(FindInPath)
nmap <leader>fe <Action>(SearchEverywhere)
nmap <c-p> <Action>(GotoFile)
nmap <leader>wt <C-6>
